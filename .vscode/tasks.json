{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "debugBuild",
            "dependsOn": [
                "cppClean",
                "cppBuild"
            ]
        },
        {
            "type": "cppbuild",
            "label": "cppBuild",
            "command": "make",
            "args": ["debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
              "kind": "build",
              "isDefault": true
            }
        },
        {
            "type": "cppbuild",
            "label": "cppClean",
            "command": "make",
            "args": ["clean"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
              "kind": "build",
              "isDefault": true
            }
        }
    ]
}